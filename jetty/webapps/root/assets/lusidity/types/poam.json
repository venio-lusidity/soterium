{
  "name": "POAM",
  "zones": [
    {
      "layout": "zone",
      "zone": ".menu-bar",
      "styles": ["/assets/lusidity/css/entity.css"],
      "plugins": [
        "/assets/lusidity/plugins/jquery.semanticType.js",
        "/assets/lusidity/plugins/jquery.image.js",
        "/assets/lusidity/plugins/jquery.nrt.metrics.js",
        "/assets/lusidity/plugins/jquery.dataList.js"
      ],
      "schemas": [
      ]
    },
    {
      "layout": "zone",
      "zone": ".panel-left",
      "css": {"padding": "0 5px 0 5px"},
      "schemas": [
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "data",
              "property": "title",
              "type": "h5",
              "css": { "display": "block", "text-align": "center" }
            }
          ]
        },
        {
          "layout": "plugin",
          "property": "/",
          "type": "div",
          "cls": "cover-art center",
          "name": "image",
          "plugin":{
            "image": "/assets/img/types/poam.png",
            "cls": "med",
            "cssFiles": [
              "/assets/lusidity/plugins/css/image.css"
            ]
          }
        },
        {
          "layout": "plugin",
          "property": "instanceOf",
          "type": "div",
          "name": "semanticType",
          "css": { "display": "block", "text-align": "center" },
          "plugin":{
            "image": false,
            "cssFiles": [
              "/assets/lusidity/plugins/css/semanticType.css"
            ]
          }
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Submitted:</div>"
            },
            {
              "layout": "data",
              "property": "createdWhen",
              "dataType": "date",
              "format": "j\\-M\\-Y\\, g\\:i a",
              "type": "div",
              "maxItems": 1,
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Last Modified:</div>"
            },
            {
              "layout": "data",
              "property": "modifiedWhen",
              "dataType": "date",
              "format": "j\\-M\\-Y\\, g\\:i a",
              "type": "div",
              "maxItems": 1,
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "plugin",
              "property": "/",
              "type": "div",
              "name": "dataList",
              "css": {
                "display": "block",
                "margin-top": "10px"
              },
              "plugin": {
                "glyph": "glyphicons glyphicons-user",
                "title": "Initiator",
                "url": null,
                "property": "/people/person/initiators",
                "limit": 1000,
                "properties": [
                  {
                    "label": "User",
                    "property": "title",
                    "linked": true
                  }
                ]
              }
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "plugin",
              "property": "/",
              "type": "div",
              "name": "dataList",
              "css": {
                "display": "block",
                "margin-top": "10px"
              },
              "plugin": {
                "glyph": "glyphicons glyphicons-flowchart",
                "title": "Workflow",
                "url": null,
                "property": "/process/workflow/workflow/workflows",
                "limit": 1000,
                "properties": [
                  {
                    "label": "Workflow",
                    "property": "title",
                    "linked": true
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "layout": "zone",
      "zone": ".panel-middle",
      "cls": "no-border full-min",
      "attr": {"data-oh": 7},
      "schemas": [
        {
          "layout": "html",
          "type": "div",
          "schemas":[
            {
              "layout": "data",
              "property": "/system/primitives/raw_string/descriptions.results"
              "schemas":[
                {
                  "layout": "data",
                  "property": "value",
                  "type": "p"
                }
              ]
            },
            {
              "layout": "html",
              "type": "ul",
              "cls": "nav nav-tabs",
              "schemas":[
                {
                  "layout": "html",
                  "type": "li",
                  "cls": "active",
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "a",
                      "text": "Vulnerabilities",
                      "cls": "no-radius",
                      "attr": {"data-toggle": "tab", "href": "#tab-mitigations"}
                    }
                  ]
                }
              ]
            },
            {
              "layout": "html",
              "type": "div",
              "cls": "tab-content",
              "schemas":[
                {
                  "layout": "html",
                  "type": "div",
                  "cls": "tab-pane active",
                  "attr": {"id": "tab-mitigations"},
                  "schemas": [
                    {
                      "layout": "plugin",
                      "property": "/",
                      "type": "div",
                      "name": "metrics",
                      "css": { "display": "block"},
                      "plugin":{
                        "type": "vulnerabilities",
                        "title": "Vulnerabilities included in POA&M",
                        "glyph": "icon-bug",
                        "limit": 0,
                        "propertyKey": "/technology/security/vulnerabilities/base_vulnerability/vulnerabilities"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}