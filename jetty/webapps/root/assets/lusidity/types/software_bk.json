{
  "name": "Software",
  "zones": [
    {
      "layout": "zone",
      "zone": ".menu-bar",
      "styles": ["/assets/lusidity/css/entity.css"],
      "plugins": [
        "/assets/lusidity/plugins/jquery.semanticType.js",
        "/assets/lusidity/plugins/jquery.image.js",
        "/assets/lusidity/plugins/jquery.nrt.metrics.js",
        "/assets/lusidity/plugins/jquery.dataList.js",
        "/assets/lusidity/plugins/jquery.treeViewCommon.js"
      ],
      "schemas": [
      ]
    },
    {
      "layout": "zone",
      "zone": ".panel-left",
      "css": {"padding": "0 5px 0 5px"},
      "schemas": [
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "data",
              "property": "title",
              "type": "h5",
              "css": { "display": "block", "text-align": "center" }
            }
          ]
        },
        {
          "layout": "plugin",
          "property": "/",
          "type": "div",
          "cls": "cover-art center",
          "name": "image",
          "plugin":{
            "image": "/assets/img/types/floppy.png",
            "cls": "med",
            "cssFiles": [
              "/assets/lusidity/plugins/css/image.css"
            ]
          }
        },
        {
          "layout": "plugin",
          "property": "instanceOf",
          "type": "div",
          "name": "semanticType",
          "css": { "display": "block", "text-align": "center" },
          "plugin":{
            "image": false,
            "cssFiles": [
              "/assets/lusidity/plugins/css/semanticType.css"
            ]
          }
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Created When:</div>"
            },
            {
              "layout": "data",
              "property": "createdWhen",
              "dataType": "date",
              "format": "j\\-M\\-Y\\, g\\:i a",
              "type": "div",
              "maxItems": 1,
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Modified When:</div>"
            },
            {
              "layout": "data",
              "property": "modifiedWhen",
              "dataType": "date",
              "format": "j\\-M\\-Y\\, g\\:i a",
              "type": "div",
              "maxItems": 1,
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "plugin",
              "property": "/",
              "type": "div",
              "name": "dataList",
              "css": {
                "display": "block"
              },
              "plugin": {
                "glyph": "glyphicons glyphicons-info-sign",
                "title": "Version",
                "property": "/technology/software_version/version",
                "limit": 1,
                "blocked": false,
                "properties": [
                  {
                    "label": "version",
                    "property": "version"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "layout": "zone",
      "zone": ".panel-middle",
      "cls": "no-border",
      "schemas": [
        {
          "layout": "html",
          "type": "div",
          "cls": "full-min",
          "attr": {"data-oh": 7},
          "schemas":[
            {
              "layout": "data",
              "property": "/",
              "type": "div",
              "schemas":[
                {
                  "property": "/system/primitives/raw_string/descriptions.results",
                  "schemas":[
                    {
                      "layout": "data",
                      "type": "p",
                      "property": "value"
                    }
                  ]
                }
              ]
            },
            {
              "layout": "html",
              "type": "ul",
              "cls": "nav nav-tabs",
              "schemas":[
                {
                  "layout": "html",
                  "type": "li",
                  "cls": "active",
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "a",
                      "text": "Details",
                      "cls": "no-radius",
                      "attr": {"data-toggle": "tab", "href": "#tab-1"}
                    }
                  ]
                },
                {
                  "layout": "html",
                  "type": "li",
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "a",
                      "text": "Installed On",
                      "cls": "no-radius",
                      "attr": {"data-toggle": "tab", "href": "#tab-2", "id": "tab-2-tab"}
                    }
                  ]
                }
              ]
            },
            {
              "layout": "html",
              "type": "div",
              "cls": "tab-content",
              "schemas":[
                {
                  "layout": "html",
                  "type": "div",
                  "cls": "tab-pane active",
                  "attr": {"id": "tab-1"},
                  "css": { "padding": "10px"},
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "div",
                      "schemas":[
                        {
                          "layout": "html",
                          "html": "<div class=\"data-label\">Title:</div>"
                        },
                        {
                          "layout": "data",
                          "property": "title",
                          "type": "div",
                          "maxItems": 1,
                          "cls": "data-value"
                        }
                      ]
                    },
                    {
                      "layout": "html",
                      "type": "div",
                      "schemas":[
                        {
                          "layout": "html",
                          "html": "<div class=\"data-label\">CPE:</div>"
                        },
                        {
                          "layout": "data",
                          "property": "cpe",
                          "type": "div",
                          "maxItems": 1,
                          "cls": "data-value"
                        }
                      ]
                    }
                  ]
                },
                {
                  "layout": "html",
                  "type": "div",
                  "cls": "tab-pane",
                  "attr": {"id": "tab-2"},
                  "css": { "padding": "10px"},
                  "schemas":[
                    {
                      "layout": "plugin",
                      "property": "/",
                      "type": "div",
                      "name": "dataList",
                      "css": { "display": "block"},
                      "plugin":{
                        "loaderId": "tab-2-tab",
                        "glyph": "glyphicons glyphicons-info-sign",
                        "title": "Installed On",
                        "property": "/",
                        "hasHeader": true,
                        "hasItemCounter": true,
                        "showExcluded": true,
                        "query": {
                          "fn": "softwareToDevices"
                        },
                        "properties":[
                          {
                            "property": "title",
                            "linked": true
                          },
                          {
                            "property": "/electronic/network/network_adapter/networkAdapters.ipAddress",
                            "maxItems": 1
                          },
                          {
                            "property": "/electronic/network/network_adapter/networkAdapters.macAddress",
                            "maxItems": 1
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}