{
  "name": "STIG Rule",
  "zones": [
    {
      "layout": "zone",
      "zone": ".menu-bar",
      "styles": ["/assets/lusidity/css/entity.css"],
      "plugins": [
        "/assets/lusidity/plugins/jquery.semanticType.js",
        "/assets/lusidity/plugins/jquery.image.js",
        "/assets/lusidity/plugins/jquery.nrt.metrics.js",
        "/assets/lusidity/plugins/jquery.dataList.js",
        "/assets/lusidity/plugins/jquery.schemaList.js",
        "/assets/lusidity/plugins/jquery.treeViewCommon.js"
      ],
      "schemas": [
      ]
    },
    {
      "layout": "zone",
      "zone": ".panel-left",
      "css": {"padding": "0 5px 0 5px"},
      "schemas": [
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "data",
              "property": "vulnId",
              "type": "h5",
              "css": { "display": "block", "text-align": "center" }
            }
          ]
        },
        {
          "layout": "plugin",
          "property": "/",
          "type": "div",
          "cls": "cover-art center",
          "name": "image",
          "plugin":{
            "image": "/assets/img/types/rule.png",
            "cls": "med",
            "cssFiles": [
              "/assets/lusidity/plugins/css/image.css"
            ]
          }
        },
        {
          "layout": "plugin",
          "property": "instanceOf",
          "type": "div",
          "name": "semanticType",
          "css": { "display": "block", "text-align": "center" },
          "plugin":{
            "image": false,
            "cssFiles": [
              "/assets/lusidity/plugins/css/semanticType.css"
            ]
          }
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Published:</div>"
            },
            {
              "layout": "data",
              "property": "publishedOn",
              "dataType": "date",
              "format": "j\\-M\\-Y\\",
              "type": "div",
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Rule ID:</div>"
            },
            {
              "layout": "data",
              "property": "vulnId",
              "type": "div",
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Severity:</div>"
            },
            {
              "layout": "data",
              "property": "severity",
              "type": "div",
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Category:</div>"
            },
            {
              "layout": "data",
              "property": "html.label",
              "type": "div",
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Version:</div>"
            },
            {
              "layout": "data",
              "property": "version",
              "type": "div",
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Fix Id:</div>"
            },
            {
              "layout": "data",
              "property": "fixId",
              "type": "div",
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "</br><div class=\"data-label\">System Information:</div>"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Created When:</div>"
            },
            {
              "layout": "data",
              "property": "createdWhen",
              "dataType": "date",
              "format": "j\\-M\\-Y\\, g\\:i a",
              "type": "div",
              "maxItems": 1,
              "cls": "data-value"
            }
          ]
        },
        {
          "layout": "html",
          "type": "div",
          "schemas": [
            {
              "layout": "html",
              "html": "<div class=\"data-label\">Modified When:</div>"
            },
            {
              "layout": "data",
              "property": "modifiedWhen",
              "dataType": "date",
              "format": "j\\-M\\-Y\\, g\\:i a",
              "type": "div",
              "maxItems": 1,
              "cls": "data-value"
            }
          ]
        }
      ]
    },
    {
      "layout": "zone",
      "zone": ".panel-middle",
      "cls": "no-border",
      "schemas": [
        {
          "layout": "html",
          "type": "div",
          "cls": "full-min",
          "attr": {"data-oh": 7},
          "schemas":[
            {
              "layout": "html",
              "type": "ul",
              "cls": "nav nav-tabs",
              "schemas":[
                {
                  "layout": "html",
                  "type": "li",
                  "cls": "active",
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "a",
                      "text": "Details",
                      "cls": "no-radius",
                      "attr": {"data-toggle": "tab", "href": "#tab-1"}
                    }
                  ]
                },
                {
                  "layout": "html",
                  "type": "li",
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "a",
                      "text": "References",
                      "cls": "no-radius",
                      "attr": {"data-toggle": "tab", "href": "#tab-2"}
                    }
                  ]
                },
                {
                  "layout": "html",
                  "type": "li",
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "a",
                      "text": "Checks",
                      "cls": "no-radius",
                      "attr": {"data-toggle": "tab", "href": "#tab-3"}
                    }
                  ]
                }
              ]
            },
            {
              "layout": "html",
              "type": "div",
              "cls": "tab-content",
              "schemas":[
                {
                  "layout": "html",
                  "type": "div",
                  "cls": "tab-pane active",
                  "attr": {"id": "tab-1"},
                  "css": { "padding": "10px"},
                  "schemas":[
                    {
                      "layout": "html",
                      "schemas": [
                        {
                          "layout": "html",
                          "type": "div",
                          "css": {
                            "padding": "10px"
                          },
                          "schemas": [
                            {
                              "layout": "html",
                              "type": "div",
                              "css": {"padding": "10px", "fontWeight": "bold"},
                              "schemas": [
                                {
                                  "layout": "data",
                                  "property": "title",
                                  "type": "div",
                                  "cls": "data-value"
                                }
                              ]
                            },
                            {
                              "layout": "data",
                              "property": "/",
                              "type": "div",
                              "css": {"padding": "10px"},
                              "schemas":[
                                {
                                  "property": "/system/primitives/raw_string/descriptions.results",
                                  "schemas":[
                                    {
                                      "layout": "data",
                                      "type": "p",
                                      "property": "value"
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "layout": "plugin",
                              "property": "/",
                              "type": "div",
                              "name": "schemaList",
                              "css": {
                                "display": "block"
                              },
                              "plugin": {
                                "hasHeader": true,
                                "hasItemCounter": false,
                                "missing": "No Release found for this STIG Rule",
                                "glyph": "glyphicons glyphicons-info-sign",
                                "title": "STIG Releases using this rule",
                                "property": "/technology/security/vulnerabilities/stig/release/stig_release",
                                "view": "stig_rule_rel_view.json",
                                "sort": {"title" : "asc"}
                              }
                            },
                            {
                              "layout":"html",
                              "type": "div",
                              "schemas":[
                                {
                                  "layout": "plugin",
                                  "property": "/",
                                  "type": "div",
                                  "name": "dataList",
                                  "css": { "display": "block"},
                                  "plugin":{
                                    "glyph": "glyphicons glyphicons-info-sign",
                                    "title": "Recommended Fix",
                                    "property": "/system/primitives/raw_string/fixText",
                                    "limit": 1,
                                    "blocked": false,
                                    "properties":[
                                      {
                                        "property": "value"
                                      }
                                    ]
                                  }
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "layout": "html",
                  "type": "div",
                  "cls": "tab-pane",
                  "attr": {"id": "tab-2"},
                  "css": { "padding": "10px"},
                  "schemas":[ {
                    "layout": "html",
                    "type": "div",
                    "schemas": [
                      {
                        "layout": "plugin",
                        "property": "/",
                        "type": "div",
                        "name": "dataList",
                        "css": { "display": "block"},
                        "plugin":{
                          "glyph": "glyphicons glyphicons-info-sign",
                          "title": "Reference",
                          "property": "/technology/security/vulnerabilities/stig/release/group/rule/stig_rule_reference/references",
                          "limit": 10,
                          "blocked": true,
                          "properties":[
                            {
                              "label": "Title:",
                              "property": "title"
                            },
                            {
                              "label": "Subject:",
                              "property": "subject"
                            },
                            {
                              "label": "Type:",
                              "property": "type"
                            },
                            {
                              "label": "Publisher:",
                              "property": "publisher"
                            }
                          ]
                        }
                      }
                    ]
                  }]
                },
                {
                  "layout": "html",
                  "type": "div",
                  "cls": "tab-pane",
                  "attr": {"id": "tab-3"},
                  "css": { "padding": "10px"},
                  "schemas":[
                    {
                      "layout": "html",
                      "type": "div",
                      "schemas": [
                        {
                          "layout": "plugin",
                          "property": "/",
                          "type": "div",
                          "name": "dataList",
                          "css": { "display": "block"},
                          "plugin":{
                            "glyph": "glyphicons glyphicons-info-sign",
                            "title": "Checks",
                            "property": "/technology/security/vulnerabilities/stig/release/group/rule/stig_rule_check/checks",
                            "limit": 10,
                            "blocked": true,
                            "properties":[
                              {
                                "label": "Name:",
                                "property": "name"
                              },
                              {
                                "label": "Reference:",
                                "property": "href"
                              },
                              {
                                "label": "System:",
                                "property": "system"
                              },
                              {
                                "label": "Content:",
                                "property": "content"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}